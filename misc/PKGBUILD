# Maintainer: Statulr <re@citra.lol>

pkgname=aurc
pkgenv=calc
pkgver=BETA
pkgrel=1
pkgdesc="Calc is a lightweight calculator for the terminal made in C"
PACKAGER=statulr

arch=('i686' 'pentium4' 'x86_64' 'arm' 'armv7h' 'armv6h' 'aarch64' 'riscv64')
url="https://github.com/statulr/calc"
license=('GPL3')
depends=(
  'gcc'
  'make'
  'base-devel'
)
source=("${pkgenv}-${pkgver}.tar.gz::https://github.com/statulr/calc/archive/${pkgver}.tar.gz")
sha256sums=('1c0baa0360b8e7e0066cf40afb0a0b40810af091c2abef790ff0dbef9eeee11b') # needs to update the sha256sum for every git archive ${pkgver} tarball from ${source}

build() {
  cd ${pkgenv}-${pkgver}/src
  make build
}

package() {
  cd ${pkgenv}-${pkgver}/src
  install -Dm755 build/${pkgname} "$pkgdir/usr/bin/${pkgname}"
  cd ${srcdir}/${pkgenv}-${pkgver}
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"${pkgname}"/LICENSE
}
